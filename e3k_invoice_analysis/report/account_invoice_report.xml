<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="filter_invoice_state" model="ir.filters">
          <field name="name">By State</field>
          <field name="model_id">account.invoice.report</field>
          <field name="domain">[]</field>
          <field name="user_id" eval="False"/>
          <field name="context">{'group_by': ['invoice_date:month', 'state_id']}</field>
      </record>
      <record id="foyer_supreme_account_inherit_view_account_invoice_report_search" model="ir.ui.view">
        <field name="name">foyer.supreme.account.inherit.view_account_invoice_report_search</field>
        <field name="model">account.invoice.report</field>
        <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='partner_id']" position="after">
            <field name="state_id"/>
          </xpath>
          <xpath expr="//filter[@name='partner_id']" position="after">
            <filter string="State" name="state_id" context="{'group_by':'state_id','residual_visible':True}"/>
          </xpath>
        </field>
    </record>
    <record id="account_invoice_report_view_tree" model="ir.ui.view">
            <field name="name">account.invoice.report.tree</field>
            <field name="model">account.invoice.report</field>
            <field name="arch" type="xml">
                <tree default_order="invoice_date desc">
                  <field name="invoice_date"/>
                  <field name="partner_id"/>
                  <field name="move_type"/>
                  <field name="state"/>
                  <field name="payment_state"/>
                  <field name="product_id"/>
                  <field name="quantity"/>
                  <field name="price_subtotal"/>
                </tree>
            </field>
    </record>

    <record id="foyer_supreme_account_inherit_view_account_invoice_report_pivot" model="ir.ui.view">
      <field name="name">foyer.supreme.account.inherit.view.account.invoice.report.pivot</field>
      <field name="model">account.invoice.report</field>
      <field name="inherit_id" ref="account.view_account_invoice_report_pivot"/>
      <field name="arch" type="xml">
        <xpath expr="//pivot[1]" position="attributes">
          <attribute name="disable_linking"/>
        </xpath>
      </field>
  </record>


  </data>
</odoo>
